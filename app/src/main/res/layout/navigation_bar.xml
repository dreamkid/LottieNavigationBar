<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/rl_first_tab"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"    
        android:layout_weight="1"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_first_icon"
            app:lottie_fileName="home.json"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/tv_first"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_first_icon"
            android:textSize="11dp"
            android:text="首页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_second_tab"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_second_icon"
            app:lottie_fileName="category.json"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/tv_second"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_second_icon"
            android:textSize="11dp"
            android:text="分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_third_tab"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_third_icon"
            app:lottie_fileName="cart.json"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/tv_third"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_third_icon"
            android:textSize="11dp"
            android:text="购物车"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_fourth_tab"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_fourth_icon"
            app:lottie_fileName="mine.json"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/tv_fourth"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_fourth_icon"
            android:textSize="11dp"
            android:text="我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</merge>